#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	$(MAKE)

override_dh_auto_install:
	$(MAKE) DESTDIR=$(CURDIR)/debian/sensor-dht11 PREFIX=/usr install

override_dh_auto_clean:
	$(MAKE) clean

override_dh_strip:
	dh_strip --no-automatic-dbgsym

override_dh_installinit:
	# Skip default init handling; we use a timer, not a long-running daemon

override_dh_installsystemd:
	dh_installsystemd --name=sensor-dht11 sensor-dht11.timer
